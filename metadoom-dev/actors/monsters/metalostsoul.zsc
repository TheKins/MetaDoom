class LostSoulGib1 : Actor
{
	Default
	{
		+DOOMBOUNCE;
		PROJECTILE;
		-NOGRAVITY;
		//-NOBLOCKMAP;
		-ACTIVATEIMPACT;
		+NOTELEPORT;
		-TELESTOMP;
		-SOLID;
		+ROLLSPRITE;
		+ROLLCENTER;
		Radius 2;
		Damage 0;
		bouncefactor 0.5;
		SeeSound "barrel/gib";
		gravity 0.5;
		Speed 5;
		scale 0.75;
	}
	
	States
	{
	Spawn:
		LGI1 A 0;
		LGI1 A 0 A_Jump(128, "Setup");
		LGI3 A 0 A_Jump(128, "Setup");
		goto Setup;
	Setup:
		"####" # 0 ThrustThingZ (0, random(32,45), 0, 1);
		"####" # 0 ThrustThing(random(0,360), 8, 1, 0);
	ChangeDir:
		"####" # 0 A_Jump(128,"Alt");
		goto See;
	See:
		"####" # 0 ThrustThingZ(0,6,1,1);
		"####" # 1 A_SetRoll((roll + 5));
		loop;
	Alt:
		"####" # 0 ThrustThingZ(0,6,1,1);
		"####" # 1 A_SetRoll((roll - 5));
		loop;
	Bounce.Floor:
		//"####" # 0 A_SpawnItem("BloodSplat");
		goto ChangeDir;
	Bounce.Wall:
		goto ChangeDir;
	Death:
		"####" # 0 A_ChangeLinkFlags(false, false); //A_ChangeFlag(NOBLOCKMAP, 0);
		"####" # -1;
		Stop;
    }
}

