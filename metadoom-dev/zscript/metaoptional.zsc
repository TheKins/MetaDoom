			"ZombiemanSpawner", "ShotgunGuySpawner", "ChaingunGuySpawner", "ImpSpawner", "PinkySpawner",
			"DogSpawner", "SpectreSpawner", "CacodemonSpawner", "HellKnightSpawner", "PainElementalSpawner",
